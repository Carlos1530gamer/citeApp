<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/chat_activity_list_item_image_emisor"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@+id/chat_activity_list_item_label_emisor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars[3]"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/chat_activity_list_item_label_emisor"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginEnd="17dp"
        android:fontFamily="monospace"
        android:text="@string/text"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/chat_activity_list_item_image_emisor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chat_activity_list_item_image_emisor"
        app:layout_constraintTop_toTopOf="@+id/chat_activity_list_item_image_emisor" />
</android.support.constraint.ConstraintLayout>